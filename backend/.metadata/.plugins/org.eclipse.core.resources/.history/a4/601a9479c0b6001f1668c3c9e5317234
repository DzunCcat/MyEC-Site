package com.example.userservice.config.properties;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.context.annotation.Configuration;

@Configuration
@ConfigurationProperties(prefix = "userservice.security")
@TestPropertySource("classpath:application-test.yml")
public class TestSecurityProperties {
    private JwtConfig jwt;
    private TestUsers testUsers;

    // JWTの設定を保持するための内部クラス
    public static class JwtConfig {
        private String secret;
        private long expiration;

        // getter, setterメソッド
        public String getSecret() { return secret; }
        public void setSecret(String secret) { this.secret = secret; }
        public long getExpiration() { return expiration; }
        public void setExpiration(long expiration) { this.expiration = expiration; }
    }

    // テストユーザー設定を保持するための内部クラス
    public static class TestUsers {
        private UserConfig admin;
        private UserConfig regular;

        // getter, setterメソッド
        public UserConfig getAdmin() { return admin; }
        public void setAdmin(UserConfig admin) { this.admin = admin; }
        public UserConfig getRegular() { return regular; }
        public void setRegular(UserConfig regular) { this.regular = regular; }
    }

    // ユーザー設定の詳細を保持するための内部クラス
    public static class UserConfig {
        private String username;
        private String password;
        private String roles;

        // getter, setterメソッド
        public String getUsername() { return username; }
        public void setUsername(String username) { this.username = username; }
        public String getPassword() { return password; }
        public void setPassword(String password) { this.password = password; }
        public String getRoles() { return roles; }
        public void setRoles(String roles) { this.roles = roles; }
    }

    // メインクラスのgetter, setterメソッド
    public JwtConfig getJwt() { return jwt; }
    public void setJwt(JwtConfig jwt) { this.jwt = jwt; }
    public TestUsers getTestUsers() { return testUsers; }
    public void setTestUsers(TestUsers testUsers) { this.testUsers = testUsers; }
}