spring:
  application:
    name: user-service-test

  # データソース設定
  datasource:
    driver-class-name: org.h2.Driver
    url: jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;MODE=PostgreSQL;DB_CLOSE_ON_EXIT=FALSE
    username: sa
    password: 

  # JPA設定
  jpa:
    database-platform: org.hibernate.dialect.H2Dialect
    hibernate:
      ddl-auto: create-drop
    properties:
      hibernate:
        format_sql: true
        show_sql: true
        use_sql_comments: true
    show-sql: true

  # H2コンソール設定
  h2:
    console:
      enabled: true
      path: /h2-console

  # Security設定
  security:
    user:
      name: testuser
      password: testpass
      roles: USER

# Eureka Client設定（テスト時は無効化）
eureka:
  client:
    enabled: false

# セキュリティ設定
security:
  jwt:
    secret: test-secret-key-must-be-at-least-256-bits-long
    expiration: 3600000

# ログ設定
logging:
  level:
    org.springframework.security: DEBUG
    org.springframework.test: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
    com.example.userservice: DEBUG

# テスト固有の設定
test:
  user:
    admin:
      username: admin
      password: adminpass
      roles: ADMIN
    regular:
      username: user
      password: userpass
      roles: USER